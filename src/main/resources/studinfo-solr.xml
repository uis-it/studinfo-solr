<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	 http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
	">

  <context:annotation-config/>
  
  <bean id="solrUpdater" class="no.uis.service.component.studinfosolr.impl.SolrUpdaterImpl">
    <property name="solrServers">
      <map>
        <entry key="EMNE_HOST" >
          <ref bean="emne_host_solr"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean id="solrServerEmneNB" class="no.uis.service.component.studinfosolr.impl.SolrServerFactory">
    <property name="url" value="${solr.server.emne.nb.url}"/>
    <property name="username" value="${solr.server.username}"/>
    <property name="password" value="${solr.server.password}"/>
  </bean>
  
  <bean id="emne_host_solr" class="java.lang.Object"/>  
  
</beans>
